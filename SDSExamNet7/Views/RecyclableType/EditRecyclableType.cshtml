@model SDSExamNet7.Models.Entities.RecyclableItem

<h1>Edit Recyclable Item</h1>

@if (Model is null)
{
    <p>No Recyclable Item was found</p>
}
else
{
    <form asp-action="EditRecyclableItem" method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Weight</label>
            <input type="number" class="form-control" asp-for="Weight" />
        </div>

        <div class="mt-3">
            <label class="form-label">Computed Rate</label>
            <input type="number" class="form-control" asp-for="ComputedRate" />
        </div>

        <div class="mt-3">
            <label class="form-label">Item Description</label>
            <input type="text" class="form-control" asp-for="ItemDescription" />
        </div>

     

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update</button>

           
        </div>
    </form>
}
