@model SDSExamNet7.Models.AddRecyclableTypeViewModel;

<h1>Add Recyclable Type</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Type</label>
        <input type="text" class="form-control" asp-for="Type" />
    </div>
    <div class="mt-3">
        <label class="form-label">Rate</label>
        <input type="number" class="form-control" asp-for="Rate" />
    </div>
    <div class="mt-3">
        <label class="form-label">Min Kg</label>
        <input type="number" class="form-control" asp-for="MinKg" />
    </div>
    <div class="mt-3">
        <label class="form-label">Max Kg</label>
        <input type="number" class="form-control" asp-for="MaxKg" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" onclick="clearForm()">Reset</button>
    </div>
</form>

<script>
    function clearForm() {
        document.querySelectorAll('input').forEach(input => {
            input.value = '';
        });
    }
</script>
